<div class="ui fluid card">
  <div class="content">
    <div class="header">
      <div class="ui ribbon label">report</div>
      <h2 class="header">
        <% if @counting %>
          <%= @counting.name %>
        <% else %>
          [select]
        <% end %>
        <span class="ui left pointing label">counting</span>
        <% if @section %>
          <%= @section.name %>
        <% else %>
          [select]
        <% end %>
        <span class="ui left pointing label">section</span>
      </h2>
    </div>
    <div class="ui description grid">
      <div class="fourteen wide column" %>
        <%= yield %>
      </div>

      <div class="two wide column">
        <table class="ui celled table">
          <thead>
            <tr>
              <th>Counting</th>
            </tr>
          </thead>
          <tbody>
            <% @project.countings.each do |counting| %>
              <tr>
                <% if counting.id == @counting&.id %>
                  <td class="positive">
                    <i class="icon checkmark"></i>
                    <%= counting.name %>
                  </td>
                <% else %>
                  <td>
                    <a href="<%= reports_path(@project, counting: counting, section: @section) %>"><%= counting.name %></a>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <table class="ui celled table">
          <thead>
            <tr>
              <th>Section</th>
            </tr>
          </thead>
          <tbody>
            <% @project.sections.each do |section| %>
              <tr>
                <% if section.id == @section&.id %>
                  <td class="positive">
                    <i class="icon checkmark"></i>
                    <%= section.name %>
                  </td>
                <% else %>
                  <td>
                    <a href="<%= reports_path(@project, counting: @counting, section: section) %>"><%= section.name %></a>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
