<section class="section">
  <div class="panel">
    <div class="panel-heading">
      <span class="tag">species</span>
      <h1 class="title"><%= @species.name %></h1>
    </div>
  </div>
  <div class="panel-block">
    <div class="columns">
      <div class="column is-one-quarter">
        <% unless @species.verified %>
        <div class="panel">
          <div class="panel-block">
            <div class="tag is-danger">UNVERIFIED</div>
          </div>
        </div>
        <% end %>
        <div class="panel">
          <div class="panel-heading">
            Group
          </div>
          <div class="panel-block">
            <%= @species.group.name %>
          </div>
        </div>
        <div class="panel">
          <div class="panel-heading">
            Features
          </div>
          <div class="panel-block">
            <dl>
            <% @species.features.each do |feature| %>
              <dt><%= feature.choice.field.name %></dt>
              <dd><%= feature.choice.name %></dd>
            <% end %>
            </dl>
          </div>
        </div>
      </div>

      <div class="column">
        <%= yield %>
      </div>
    </div>
  </div>
</section>
