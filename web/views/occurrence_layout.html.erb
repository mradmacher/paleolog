<div class="section">
  <div class="panel">
    <div class="panel-heading">
      <span class="tag">occurrences</span>
      <h2 class="title">
        <% if @counting %>
          <%= @counting.name %>
        <% else %>
          [select]
        <% end %>
        <span class="tag">counting</span>
        <% if @section %>
          <%= @section.name %>
        <% else %>
          [select]
        <% end %>
        <span class="tag">section</span>
        <% if @sample %>
          <%= @sample.name %>
        <% else %>
          [select]
        <% end %>
        <span class="tag">sample</span>
      </h2>
    </div>
  </div>
    <div class="columns">
      <div class="column is-three-quarters" %>
        <%= yield %>
      </div>

      <div class="column">
        <table class="table is-striped is-bordered is-narrow">
          <thead>
            <tr>
              <th>Counting</th>
            </tr>
          </thead>
          <tbody>
            <% @project.countings.each do |counting| %>
              <tr>
                <% if counting.id == @counting&.id %>
                  <td class="is-selected">
                    <%= counting.name %>
                  </td>
                <% else %>
                  <td>
                    <a href="<%= occurrences_path(@project, counting: counting, section: @section, sample: @sample) %>"><%= counting.name %></a>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <table class="table is-striped is-bordered is-narrow">
          <thead>
            <tr>
              <th>Section</th>
            </tr>
          </thead>
          <tbody>
            <% @project.sections.each do |section| %>
              <tr>
                <% if section.id == @section&.id %>
                  <td class="is-selected">
                    <%= section.name %>
                  </td>
                <% else %>
                  <td>
                    <a href="<%= occurrences_path(@project, counting: @counting, section: section, sample: nil) %>"><%= section.name %></a>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="column" %>
        <table class="table is-striped is-bordered is-narrow">
          <thead>
            <tr>
              <th>Sample</th>
            </tr>
          </thead>
          <tbody>
            <% if @section %>
              <% @section.samples.each do |sample| %>
                <tr>
                  <% if sample.id == @sample&.id %>
                    <td class="is-selected">
                      <%= sample.name %>
                    </td>
                  <% else %>
                    <td>
                      <a href="<%= occurrences_path(@project, counting: @counting, section: @section, sample: sample) %>"><%= sample.name %></a>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
