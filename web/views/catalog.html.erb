<%= erb :'species/_search.html', layout: false %>
<script type="text/javascript">
$(function() {
  new SpeciesSearch({
    onSpeciesSelected: function(speciesId) {
      window.location.href = '/species/' + speciesId;
    },
    updatePath: true,
    initialFilter: <%= (@filters.empty? ? { verified: true } : @filters).to_json %>,
  });
})
</script>
